<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WhatAFridge"
        tools:targetApi="31">
        <activity
            android:name=".Views.VerificationActivity"
            android:exported="false" />
        <activity
            android:name=".Views.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".Views.AddFridgeActivity"
            android:exported="false" />
        <activity
            android:name=".Views.MyFridgeActivity"
            android:exported="false" />
        <activity
            android:name=".Views.MyRecipesActivity"
            android:exported="false" />
        <activity
            android:name=".Views.HomePageActivity"
            android:exported="false" />
        <activity
            android:name=".Views.AddRecipesActivity"
            android:exported="false" />
        <activity
            android:name=".Views.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Views.RecipeDetailActivity"
            android:exported="false" />
        <activity
            android:name=".Views.WFTemplate"
            android:exported="false" />
        <activity
            android:name=".Views.SearchRecipeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>